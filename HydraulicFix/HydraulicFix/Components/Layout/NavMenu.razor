@implements IDisposable
@inject NavigationManager NavigationManager

<div class="container-fluid">
	<div onclick="document.querySelector('.navbar-toggler').click()">

		<nav class="navbar navbar-expand navbar-dark">
			<div class="align-items-center" style="width: 60px; height: 60px;">
				<img src="/bootstrap/img/ejemplo.png" style="max-width: 120%; max-height: 120%;" />
			</div>

			<div class="container-fluid">
				<span class="navbar-brand fw-bold fs-4">HydraulicFix</span>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
						aria-controls="navbarNav" aria-label="Toggle navigation">
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">

					<div class="navbar-nav ms-auto fw-bold">
						<div class="row">
							<div class="nav-item">
								<a class="nav-link fs-4 text-light" href="/"><img src="/bootstrap/img/historial.png" style="width: 25px; height: 25px; margin-right: 2px;" />Historial</a>
							</div>
						</div>
						<div class="row">
							<div class="nav-item">
								<a class="nav-link fs-4 text-light" href="/solicitud"><img src="/bootstrap/img/solicitud.png" style="width: 28px; height: 28px; margin-right: 5px;" />Solicitud</a>
							</div>
						</div>
						<div class="row">
							<div class="nav-item">
								<a class="nav-link fs-4 text-light" href="/venta"><img src="/bootstrap/img/venta.png" style="width: 35px; height: 35px; margin-right: 5px;" />Venta</a>
							</div>
						</div>

						<div class="row">
							<div class="nav-item">
								<a class="nav-link fs-4 text-light" href="/reparacion"><img src="/bootstrap/img/reparacion.png" style="width: 25px; height: 25px; margin-right: 2px;" />Reparación</a>
							</div>
						</div>
						<div class="row">
							<div class="nav-item">
								<a class="nav-link fs-4 text-light" href="/inventario"><img src="/bootstrap/img/inventario.png" style="width: 25px; height: 25px; margin-right: 2px;" />Inventario</a>
							</div>
						</div>
						<AuthorizeView>
							<Authorized>
								<div class="row">
									<div class="nav-item">
										<a class="nav-link fs-4 text-light" href="Account/Manage"><img src="/bootstrap/img/use.svg" style="width: 30px; height: 30px; margin-right: 5px;" />@context.User.Identity?.Name</a>
									</div>
								</div>
								<div class="row">
									<div class="nav-item">
										<form action="Account/Logout" method="post">
											<AntiforgeryToken />
											<div class="border-danger rounded btn-danger">
												<input type="hidden" name="ReturnUrl" value="@currentUrl" />
												<button type="submit" class="btn btn-danger nav-link fs-4 text-light fw-bold">
													<i class="bi bi-box-arrow-right me-1 d-flex justify-content-center"></i>Salir

												</button>
											</div>
										</form>
									</div>
								</div>

							</Authorized>
							<NotAuthorized>
								<div class="row">

									<div class="nav-item ">
										<a href="Account/Register" class="nav-link fs-4 text-light"><img src="/bootstrap/img/use.svg" style="width: 25px; height: 25px; margin-right: 2px;" /> Register</a>
									</div>
								</div>
								<div class="row">
									<div class="nav-item ">
										<a href="Account/Login" class="nav-link fs-4 text-light"><img src="/bootstrap/img/use.svg" style="width: 25px; height: 25px; margin-right: 2px;" />Login</a>
									</div>
								</div>
							</NotAuthorized>
						</AuthorizeView>
					</div>
				</div>
			</div>
		</nav>
	</div>
</div>

@code {
	private string? currentUrl;

	protected override void OnInitialized()
	{
		currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
		NavigationManager.LocationChanged += OnLocationChanged;
	}

	private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
	{
		currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
		StateHasChanged();
	}

	public void Dispose()
	{
		NavigationManager.LocationChanged -= OnLocationChanged;
	}
}